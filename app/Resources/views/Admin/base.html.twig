<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% if page_title is defined %}{{ page_title }} - {% endif %}duebat{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">

        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
        <style>
            {% block stylesheets %}{% endblock %}
        </style>
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="nav-wrapper teal lighten-2">
                    <a href="{{ path('app_index') }}" class="brand-logo">{ duebat home }</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="{{ path('app_admin_index') }}">admin Home</a></li>
                        <li><a href="{{ path('app_admin_user_list_all') }}">members</a></li>
                        <li><a href="{{ path('app_admin_club_list_all') }}">clubs</a></li>
                        <li><a href="{{ path('app_admin_event_list_all') }}">events</a></li>
                    </ul>
                </div>
            </nav>
                {% block body %}{% endblock %}
        </div>
    </body>
    {% block javascripts %}
        <script type="text/javascript">
            $(document).ready(function() {
                $('select').material_select();
            });

            {% for flash_message in app.session.flashBag.get('success') %}
            $(document).ready(function () {
                Materialize.toast('{{ flash_message }}', 3500, 'teal accent-4')
            });
            {% endfor %}
        </script>
    {% endblock %}
</html>
