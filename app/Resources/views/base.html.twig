<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% if page_title is defined %}{{ page_title }} - {% endif %}Duebat{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="{{ asset('css/materialize.clockpicker.css') }}" rel="stylesheet">
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
        <!-- Compiled and minified JavaScript -->
        <script src="https://code.jquery.com/jquery-3.1.1.js"></script>
        <script src="{{ asset('js/materialize.clockpicker.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
        <style>
            body {
                display: flex;
                min-height: 100vh;
                flex-direction: column;
            }
            main {
                flex: 1 0 auto;
            }
            {% block stylesheets %}{% endblock %}
        </style>
    </head>
    <body>
    <header>
        {% include ':partial:header.html.twig' %}
    </header>
    <main>
            {% block body %}{% endblock %}
    </main>
    {% include 'partial/footer.html.twig' %}
    {% include 'partial/terms.html.twig' %}
    </body>
    <script src="{{ asset('js/site.js') }}"></script>
    <script>
        {% for flash_message in app.session.flashBag.get('success') %}
            $(document).ready(function () {
                Materialize.toast('{{ flash_message }}', 3500, 'teal accent-4')
            });
      {% endfor %}
    </script>
    {% block javascripts %}{% endblock %}
</html>
