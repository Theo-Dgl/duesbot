{% extends 'base.html.twig' %}
{% set page_title="Profile" %}
{% block body %}
    <div class="row">
        <div class="section col s12">
            <h5>{{ user.userName }}</h5>
            <p>
            </p>
            <table class="bordered">
                <tr>
                    <th>
                        Email:
                    </th>
                    <td>
                        {{ user.email }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Club:
                    </th>
                    <td>
                        {{ user.club.name }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Your dues:
                    </th>
                    {% for due in dues %}
                        <td>
                            <table>
                                <tr>
                                    <td>
                                        ${{ due.amountPerMonth|number_format(2) }}
                                    </td>
                                </tr>
                            </table>
                        </td>
                    {% endfor %}
                </tr>
                <tr>
                    <th>
                        Your events:
                    </th>
                    <td>
                        <table class="highlight">
                            <thead>
                            <tr>
                                <th>
                                    Name:
                                </th>
                                <th>
                                    Date:
                                </th>

                                <th>
                                    Status:
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for event in user.events %}
                            <tr>
                                <td>
                                    {{ event.name }}
                                </td>
                                <td>
                                    {{ event.date|date('M. d Y') }}
                                </td>
                                <td>
                                    {{ event.status }}
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
            <p>
                <a href="{{ path('app_index') }}">Back to the list</a>
            </p>
        </div>
    </div>
        <div class="fixed-action-btn click-to-toggle">
            <a class="btn-floating btn-large blue lighten-1">
                <i class="material-icons">menu</i>
            </a>
            <ul>
                <li><a class="btn-floating blue lighten-1" title="edit your profile"><i class="material-icons">mode_edit</i></a></li>
            </ul>
        </div>
{% endblock %}

